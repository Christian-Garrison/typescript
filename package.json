{
  "name": "@midwestern/style-guide",
  "private": true,
  "license": "MIT",
  "author": "Midwestern Interactive",
  "scripts": {
    "build": "turbo build",
    "clean": "turbo clean && rm -rf node_modules",
    "dev": "turbo dev",
